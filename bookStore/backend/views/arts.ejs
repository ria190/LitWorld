    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
     <script>
    async function populate() {
          const requestURL = "books.json";
          const response = await fetch(requestURL);
          const bookData = await response.json();
          TitleHead(bookData);
       }

      function TitleHead(books) {
        const booksList = document.querySelector('.books ul');
        books.forEach(book => {
          if (book.category_name === "Arts & Photo graphy") {
            const listItem = document.createElement("li");
            
            booksList.appendChild(listItem);
           
            const img = document.createElement("img");
            img.src = book.imgUrl;
            booksList.appendChild(img);
            const bookUrl=document.createElement("a");
            bookUrl.href=book.productURL;
            bookUrl.textContent=book.title;
            // listItem.textContent = book.title;
            booksList.appendChild(bookUrl);
          }
        });
      }

      populate(); 

    


    </script>
